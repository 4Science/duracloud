<assembly>
  <includeBaseDirectory>false</includeBaseDirectory>
  <formats>
    <format>zip</format>
  </formats>

  <fileSets>
    <fileSet>
      <directory>resources</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>*.sh</include>
      </includes>
    </fileSet>
  </fileSets>

  <dependencySets>
    <dependencySet>
      <scope>provided</scope>
      <includes>
        <include>org.duracloud.services:bulkimageconversionservice</include>
        <include>org.duracloud:storeclient</include>
        <include>org.duracloud:storageprovider</include>
        <include>org.jdom:com.springsource.org.jdom</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <scope>provided</scope>
      <outputFileNameMapping>image-conversion-processor.hjar</outputFileNameMapping>
      <includes>
        <include>org.duracloud.services.hadoop:image-conversion-processor</include>
      </includes>
    </dependencySet>
  </dependencySets>

</assembly>

