<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.duracloud.services</groupId>
  <artifactId>fixityservice</artifactId>
  <version>2.4.0-SNAPSHOT</version>
  <name>DuraCloud Fixity Service Bundle</name>
  <packaging>bundle</packaging>

  <parent>
    <artifactId>services</artifactId>
    <groupId>org.duracloud</groupId>
    <version>2.4.0-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>


  <profiles>
    <profile>
      <id>default</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>

      <properties>
        <bundle.context.service.name>fixityservice-${project.version}</bundle.context.service.name>
        <osgi.context.prop.duraservice>fixityservice</osgi.context.prop.duraservice>
        <osgi.context.service.id>osgiFixityService</osgi.context.service.id>
      </properties>

      <build>
        <plugins>

          <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>single</goal>
                </goals>
                <configuration>
                  <descriptors>
                    <descriptor>src/main/assembly/dep.xml</descriptor>
                  </descriptors>
                </configuration>
              </execution>
            </executions>
          </plugin>

        </plugins>
      </build>
    </profile>

    <profile>
      <!--This profile creates a service package that exposes just the extra
      tools from the fixityservice project.
      Everything works well except in the OSGi configuration (serviceutil.DuraConfigAdminImpl).
      When this 'tools' service is deployed before the standard fixityservice,
      the fixityservice is unable to get a proper handle to its configuration
      map. The ConfigAdmin assigns ownership of the fixityservice config map
      to the servicesutil bundle.
      The workaround is the creation of the separate bitintegritytoolsservice
      project.-->
      <id>tools</id>
      <activation>
        <property>
          <name>tools</name>
        </property>
      </activation>

      <properties>
        <bundle.context.service.name>fixityservice-${project.version}-tools</bundle.context.service.name>
        <osgi.context.prop.duraservice>fixityservicetools</osgi.context.prop.duraservice>
        <osgi.context.service.id>osgiFixityServiceTools</osgi.context.service.id>
      </properties>

      <build>
        <plugins>
          
          <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>single</goal>
                </goals>
                <configuration>
                  <descriptors>
                    <descriptor>src/main/assembly/dep-tools.xml</descriptor>
                  </descriptors>
                </configuration>
              </execution>
            </executions>
          </plugin>

          <plugin>
            <groupId>org.apache.felix</groupId>
            <artifactId>maven-bundle-plugin</artifactId>
            <extensions>true</extensions>

            <executions>
              <execution>
                <id>bundle-manifest</id>
                <phase>process-classes</phase>
                <goals>
                  <goal>manifest</goal>
                </goals>
              </execution>
            </executions>

            <configuration>
              <classifier>tools</classifier>
              <instructions>
                <Bundle-SymbolicName>${pom.groupId}.${pom.artifactId}-tools</Bundle-SymbolicName>
              </instructions>
            </configuration>
          </plugin>

        </plugins>
      </build>
    </profile>

  </profiles>

  <dependencies>

    <dependency>
      <groupId>org.duracloud.services</groupId>
      <artifactId>computeservice</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.duracloud.services</groupId>
      <artifactId>servicescommon</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.duracloud</groupId>
      <artifactId>common</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.duracloud</groupId>
      <artifactId>storeclient</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.duracloud</groupId>
      <artifactId>storageprovider</artifactId>
      <version>${project.version}</version>
      <scope>provided</scope>
    </dependency>  

    <!-- other -->
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>com.springsource.org.apache.commons.io</artifactId>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.jdom</groupId>
      <artifactId>com.springsource.org.jdom</artifactId>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.apache.felix</groupId>
      <artifactId>org.osgi.compendium</artifactId>
      <scope>provided</scope>
    </dependency>

  </dependencies>
  
</project>

