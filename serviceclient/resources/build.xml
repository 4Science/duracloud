<project name="ExampleServiceClient" default="compile" basedir=".">
  <description>Builds the example service client</description>

  <property name="src" location="."/>
  <property name="lib" location="lib"/>

  <target name="compile" description="compile the source">
    <javac srcdir="${src}" destdir="${src}">
      <classpath>
        <fileset dir="${lib}"/>
      </classpath>
    </javac>
  </target>

  <target name="clean" description="clean up">
    <delete>
      <fileset dir="." includes="*.class"/>
    </delete>
  </target>

  <target name="run" description="run the example">
    <input message="Enter space-name over which to run service: "
           addproperty="space.name"/>
    <java classname="ExampleServiceClient">
      <arg value="${space.name}"/>
      <classpath>
        <pathelement location="."/>
        <fileset dir="${lib}"/>
      </classpath>
    </java>
  </target>
</project>
