<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
           http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <!-- AMQ connection configuration -->
  <bean id="connFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
    <property name="brokerURL" value="tcp://localhost:61618" />
  </bean>

  <bean id="contentConnFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
    <property name="brokerURL" value="tcp://localhost:61617" />
  </bean>

  <bean id="deployDestination" class="org.apache.activemq.command.ActiveMQTopic">
    <constructor-arg index="0" value="org.duracloud.topic.service.deploy" />
  </bean>

  <bean id="undeployDestination" class="org.apache.activemq.command.ActiveMQTopic">
    <constructor-arg index="0" value="org.duracloud.topic.service.undeploy" />
  </bean>

  <bean id="updateConfigDestination" class="org.apache.activemq.command.ActiveMQTopic">
    <constructor-arg index="0" value="org.duracloud.topic.service.updateConfig" />
  </bean>

  <bean id="auditDestination" class="org.apache.activemq.command.ActiveMQTopic">
    <constructor-arg index="0" value="org.duracloud.topic.change.content.ingest,org.duracloud.topic.change.content.copy,org.duracloud.topic.change.content.delete"/>
  </bean>

  <bean id="deployMsgConverter" class="org.duracloud.serviceapi.aop.DeployMessageConverter" />

  <bean id="serviceMsgConverter" class="org.duracloud.serviceapi.aop.ServiceMessageConverter" />

  <bean id="auditMsgConverter" class="org.duracloud.storage.aop.AllContentEventsMessageConverter" />

  <!-- Message Consumers -->
  <!-- This serviceMonitor listens for duraservice events -->
  <bean class="org.springframework.jms.listener.DefaultMessageListenerContainer">
    <property name="connectionFactory" ref="connFactory"/>
    <property name="destination" ref="deployDestination"/>
    <property name="messageListener" ref="serviceMonitorDeployAdapter" />
  </bean>

  <bean class="org.springframework.jms.listener.DefaultMessageListenerContainer">
    <property name="connectionFactory" ref="connFactory"/>
    <property name="destination" ref="undeployDestination"/>
    <property name="messageListener" ref="serviceMonitorUndeployAdapter" />
  </bean>

  <bean class="org.springframework.jms.listener.DefaultMessageListenerContainer">
    <property name="connectionFactory" ref="connFactory"/>
    <property name="destination" ref="updateConfigDestination"/>
    <property name="messageListener" ref="serviceMonitorUpdateConfigAdapter" />
  </bean>

  <bean id="serviceMonitorDeployAdapter" class="org.springframework.jms.listener.adapter.MessageListenerAdapter">
    <property name="delegate" ref="serviceMonitor"/>
    <property name="defaultListenerMethod" value="onDeploy"/>
    <property name="messageConverter" ref="deployMsgConverter"/>
  </bean>

  <bean id="serviceMonitorUndeployAdapter" class="org.springframework.jms.listener.adapter.MessageListenerAdapter">
    <property name="delegate" ref="serviceMonitor"/>
    <property name="defaultListenerMethod" value="onUndeploy"/>
    <property name="messageConverter" ref="serviceMsgConverter"/>
  </bean>

  <bean id="serviceMonitorUpdateConfigAdapter" class="org.springframework.jms.listener.adapter.MessageListenerAdapter">
    <property name="delegate" ref="serviceMonitor"/>
    <property name="defaultListenerMethod" value="onUpdateConfig"/>
    <property name="messageConverter" ref="serviceMsgConverter"/>
  </bean>

  <!--Content event listeners-->
  <bean class="org.springframework.jms.listener.DefaultMessageListenerContainer">
    <property name="connectionFactory" ref="contentConnFactory"/>
    <property name="destination" ref="auditDestination"/>
    <property name="messageListener" ref="auditAdapter"/>
  </bean>

  <bean id="auditAdapter" class="org.springframework.jms.listener.adapter.MessageListenerAdapter">
    <property name="delegate" ref="auditListener"/>
    <property name="defaultListenerMethod" value="onContentEvent"/>
    <property name="messageConverter" ref="auditMsgConverter"/>
  </bean>

 </beans>